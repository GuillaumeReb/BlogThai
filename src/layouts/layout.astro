---
// src/layouts/Layout.astro
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const recettes = await getCollection("recette");
const recetteCategories = [...new Set(recettes.map((r) => r.data.category))];
const SITE_TITLE = "Mon Super Site"; // Assurez-vous que SITE_TITLE est défini
const description = "Description de mon super site."; // Ajoutez une description par défaut
---

<html lang="fr">
<head>
  <BaseHead title={SITE_TITLE} description={description} />
</head>
<body>
  <Header SITE_TITLE={SITE_TITLE} recetteCategories={recetteCategories} />
  <main>
    <slot />
  </main>
  <Footer />
</body>
</html>